using FFTW




# *******************************************
#  Configuration
# *******************************************
struct FFT1D_config

    nx::Int        # Number of Grids
    nk::Int        # Cut-off wavenumber, nk <= nx
    xmin::Float64  # Min. value of x
    xmax::Float64  # Max value of x
    x_X::Array{Float64, 1} # x-corrdinate
    k_K::Array{Complex{Float64}, 1} # k-coordinate

end


